<div>
<%= form_with model: article, html: { class: "space-y-6" } do |form| %>
  <div class="space-y-2">
    <%= form.label :Título, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :title, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    <% article.errors.full_messages_for(:title).each do |message| %>
      <div class="text-red-500 text-xs mt-1"><%= message %></div>
    <% end %>
  </div>

  <div class="space-y-2">
    <%= form.label :Párrafo, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :body, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
    <% article.errors.full_messages_for(:body).each do |message| %>
      <div class="text-red-500 text-xs mt-1"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit "Crear artículo", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
</div>
<% end %>